<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:textAlignment="center"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#AF9999"
        android:backgroundTint="#DAE8E5"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/Airport_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AF9E9E"
            android:backgroundTint="#E1DFBF"
            android:text="@string/airport_name"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/four"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9B9C87"
            android:backgroundTint="#CFD6ED"
            android:text="@string/code"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#F1ADAD"
            android:text="@string/title"
            android:textAlignment="center"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>