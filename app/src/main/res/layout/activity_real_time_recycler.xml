<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Real_Time_Recycler">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="399dp"
            android:layout_height="330dp"
            app:layout_constraintBottom_toBottomOf="@+id/Airport_Name"
            app:layout_constraintTop_toBottomOf="@+id/Airport_Name">

            <com.google.android.material.imageview.ShapeableImageView

                android:id="@+id/ImageView"
                android:layout_width="104dp"
                android:layout_height="102dp"
                android:layout_marginStart="4dp"

                android:backgroundTint="#805353"
                android:backgroundTintMode="add"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Button"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/Flight_Title"
                android:layout_width="282dp"
                android:layout_height="98dp"
                android:gravity="center"
                android:text="@string/title"
                android:textSize="20sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/Departure_Airport"
                android:layout_width="219dp"
                android:layout_height="37dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"

                android:gravity="center"
                android:text="@string/departure_airport"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ImageView" />

            <TextView
                android:id="@+id/Arrival_Airport"
                android:layout_width="219dp"
                android:layout_height="37dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="120dp"

                android:gravity="center"
                android:text="@string/departure_airport"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ImageView" />

            <TextView
                android:id="@+id/Schedule_Time_Departure"
                android:layout_width="247dp"
                android:layout_height="45dp"
                android:layout_marginStart="88dp"

                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/scheduled_time"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Departure_ICAO" />

            <TextView
                android:id="@+id/schedule_Time_Departure"
                android:layout_width="247dp"
                android:layout_height="45dp"
                android:layout_marginStart="100dp"

                android:layout_marginTop="120dp"
                android:gravity="center"
                android:text="@string/scheduled_time"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Departure_ICAO" />

            <TextView
                android:id="@+id/Departure_ICAO"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_marginStart="244dp"

                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/icao"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Flight_Title" />

            <TextView
                android:id="@+id/departure_ICAO4"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_marginStart="240dp"

                android:layout_marginTop="124dp"
                android:gravity="center"
                android:text="@string/icao"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Flight_Title" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="350dp"
                android:layout_height="4dp"
                android:layout_marginTop="5dp"
                android:background="#170707"
                android:backgroundTint="#450909"
                android:text="@string/textview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Schedule_Time_Departure" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>