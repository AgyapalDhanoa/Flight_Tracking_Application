<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="false"
    android:layout_gravity="center|center_horizontal|top"
    android:layout_margin="20dp"
    android:background="#DFAAAA"
    android:backgroundTint="#935959"
    android:textAlignment="center"
    app:cardCornerRadius="8dp"
    app:layout_anchorGravity="center_horizontal">

    <LinearLayout
        android:layout_width="667dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:background="#AF9999"
        android:backgroundTint="#DAE8E5"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/Airport_Name"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:background="#AF9E9E"
            android:backgroundTint="#E1DFBF"
            android:text="@string/airport_name"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/image_view"
            android:layout_width="393dp"
            android:layout_height="143dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/four"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/Code"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:background="#9B9C87"
            android:backgroundTint="#CFD6ED"
            android:text="@string/code"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:background="#F1ADAD"
            android:text="@string/title"
            android:textAlignment="center"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>